= render 'side'
.chat-main
  .top
    .top__group
      .top__group--name
        = @group.name
      .top__group--member
        Members:
        - @group.users.each do |user|
          = user.name
    .top__edit
      =link_to "Edit", edit_group_path(@group)
  .chat
    = render @chats
  .message
    = form_for [@group, @chat], html: {class: "chat_form"} do |f|
      .message__box
        = f.text_field :text, placeholder: "type a message", class: "message__box--text"
        %label.i.icon.fa.fa-picture-o{ for: 'img' }
          = f.file_field :image, id: 'img', style: "display:none;"
      = f.submit :Send, class: "message__send"

